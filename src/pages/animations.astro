<style>
    :root {
        background-color: oklch(0.96 0.0328 107);
    }
@keyframes transformation {
  0% {
    transform: rotate (0deg) translateX(-25%) scale(0.5);
  }
  50% {

  }
  100% {
    transform: translateX(400px) scale(1) rotate(360deg);
  }
}
@keyframes property-change {
  0% {
  }
  50% {
    width: 500px;
    background: radial-gradient(oklch(61.47% 0.239 26.47),oklch(61.47% 0.185 144));

  }
  100% {
    width: 1000px;
    background-color:oklch(61.47% 0.185 144);
  }
}
@keyframes complex {
  0% {
    opacity: 0;
    scale: 0.5;
    transform: translateY(-50px);
  }
  50% {
    opacity: 0.5;
    scale: 0.7;
    transform: translateY(-35px);

  }
  100% {
    opacity: 1;
    scale: 1:
    transform: translateY(0px);
  }
}
.transformation {
    box-sizing: border-box;
    width: 300px;
    height: 300px;
    border: 3px solid black;
    margin: 10px;
    margin-bottom: 100px;
    background-color: oklch(70% 0.18 134.47);
    animation: transformation 0.5s ease-out 2;
    animation-direction: alternate;
}
.property-change {
    box-sizing: border-box;
    width: 200px;
    height: 200px;
    margin-bottom: 100px;
    border: 3px solid black;
    background-color: oklch(61.47% 0.239 26.47);
    animation: property-change 0.5s ease-in 1;
    animation-direction: reverse;
}
.complex{
    box.sizing: border-box;
    width: 200px;
    height: 200px;
    border: 3px solid black;
    background-color: oklch(61.47% 0.16 320.82);
